<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="@drawable/ic_launcher_idache_background">

    <ImageView
        android:id="@+id/logoWelcomeActivity"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:contentDescription="@string/headachelogo"
        android:src="@drawable/ic_headache" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="@string/idache"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:fontFamily="@font/avenir_next_lt_pro_bold"
        android:textStyle="bold" />


</RelativeLayout>