<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_headache_select_symptom_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/fragment_headache_select_symptom_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_coffee"
            android:clickable="true"
            app:civ_border_color_start="@color/colorEndGradient"
            app:civ_border_color_end="@color/colorStartGradient"
            app:civ_border_width="3dp"
            app:civ_border_color_direction="left_to_right"
            app:civ_shadow="true"
            app:civ_shadow_radius="3dp"
            app:civ_shadow_color="@color/colorStartGradient">
        </com.mikhaellopez.circularimageview.CircularImageView>
    </FrameLayout>

    <TextView
        android:id="@+id/fragment_headache_select_symptom_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/avenir_next_lt_pro_demi"
        android:text="description"
        android:textSize="12sp">
    </TextView>

</LinearLayout>