<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/activity_history_buttonUp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseline_keyboard_arrow_up"
        android:contentDescription="@string/up_button">
    </ImageButton>

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/activity_history_datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        app:wheel_visible_item_count="3"
        app:wheel_item_align="center"
        app:wheel_item_space="20dp"
        app:wheel_curved="true"
        app:wheel_atmospheric="true"
        app:wheel_indicator="false"
        app:wheel_selected_item_text_color="@color/colorGreenMedium"
        app:wheel_indicator_color="@color/colorGreenMedium"
        app:wheel_item_text_size="36sp"/>

    <ImageButton
        android:id="@+id/activity_history_buttonDown"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseline_keyboard_arrow_down"
        android:contentDescription="@string/down_button">
    </ImageButton>

</LinearLayout>